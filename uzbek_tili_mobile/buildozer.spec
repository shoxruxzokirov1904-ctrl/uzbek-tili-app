[app]

# Ilova nomi
title = O'zbek Tilim

# Paket nomi (o'zgartiring)
package.name = uz.uzbektilim

# Domena
package.domain = org.uzbek

# Ilova versiyasi
version = 1.0

# Source code
source.dir = .

# Asosiy fayl
source.main = main.py

# Android API
android.api = 29
android.minapi = 21
android.ndk = 21.3.6528147

# Android permissiyalari (kerak bo'lsa)
# android.permissions = INTERNET, WRITE_EXTERNAL_STORAGE, READ_EXTERNAL_STORAGE

# Android features
# android.features = 

# Pythondagi dependencilar
requirements = python3,kivy

# Orientatsiya
orientation = portrait

# To'liq ekran
fullscreen = 0

# Window styli
window.softinput_mode = resize

# Log level
log_level = 2

# Iconlar
icon.fg.png = assets/icons/icon.png
icon.fg.background = white

# Splash screen
presplash.fg.png = assets/icons/splash.png
presplash.background = white

# Build rejimi (debug yoki release)
build.type = debug

# Android arxitekturalari
android.arch = arm64-v8a, armeabi-v7a